<UserControl x:Class="MRSLauncherClient.ModPackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MRSLauncherClient"
             mc:Ignorable="d" Height="150" Width="150">

    <Canvas>
        <Border BorderThickness="0" Grid.Row="0" Grid.ColumnSpan="2"
        CornerRadius="10,10,10,10" BorderBrush="Black" Background="White" Height="150" Width="150"
                MouseDown="Border_MouseDown" Cursor="Hand"/>

        <Image x:Name="imgIcon" Width="100" Height="100" Canvas.Left="25" Canvas.Top="11" Source="/MRSLauncherClient;component/Resources/Crafting_Table.png" MouseDown="Border_MouseDown" Cursor="Hand"/>
        <Label x:Name="lvName" FontSize="17" Content="Modpack" Canvas.Left="15" Canvas.Top="111" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="/MRSLauncherClient;component/Resources/#HSDuggobi"/>
    </Canvas>
</UserControl>
